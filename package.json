{
  "name": "@ytoune/yt-react",
  "version": "0.0.3",
  "description": "reimplementing react as an exercise",
  "author": {
    "name": "ytoune"
  },
  "engines": {
    "node": ">= 18"
  },
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "exports": {
    "./jsx-runtime": {
      "require": "./dist/jsx-runtime/index.js",
      "default": "./dist/jsx-runtime/index.modern.mjs",
      "types": "./dist/jsx-runtime/index.d.ts"
    },
    "./dom": {
      "require": "./dist/dom/index.js",
      "default": "./dist/dom/index.modern.mjs",
      "types": "./dist/dom/index.d.ts"
    },
    "./hyperscript": {
      "require": "./dist/hyperscript.js",
      "default": "./dist/hyperscript.modern.mjs",
      "types": "./dist/hyperscript.d.ts"
    },
    "./hooks": {
      "require": "./dist/hooks.js",
      "default": "./dist/hooks.modern.mjs",
      "types": "./dist/hooks.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ytoune/yt-react.git"
  },
  "homepage": "https://github.com/ytoune/yt-react",
  "files": [
    "dist",
    "!dist/**/*.test.d.ts",
    "!dist/debug.d.ts"
  ],
  "scripts": {
    "build": "rimraf dist && run-p -s \"build:*\"",
    "build:index": "microbundle -i src/index.ts -o dist/index.js",
    "build:jsx-runtime": "microbundle -i src/jsx-runtime/index.ts -o dist/jsx-runtime/index.js",
    "build:dom": "microbundle -i src/dom/index.ts -o dist/dom/index.js",
    "build:hyperscript": "microbundle -i src/hyperscript.ts -o dist/hyperscript.js",
    "build:hooks": "microbundle -i src/hooks.ts -o dist/hooks.js",
    "test": "eslint '**/*.{ts,tsx}' && tsc --noEmit && vitest run --passWithNoTests",
    "ts-node": "node -r esbuild-register"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "esbuild": "^0.19.10",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-import": "^2.29.1",
    "happy-dom": "12.10.3",
    "microbundle": "0.15.1",
    "npm-run-all2": "6.1.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "ignore"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/node_modules",
      "/dist",
      "/.cache",
      "/.swc",
      "/scripts/sandbox*",
      "/jsx-runtime"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "env": {
      "node": true,
      "jest": true
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "github"
    ],
    "extends": [
      "prettier",
      "plugin:import/typescript",
      "plugin:github/recommended",
      "plugin:github/typescript"
    ],
    "rules": {
      "yoda": [
        "error",
        "always",
        {
          "exceptRange": true
        }
      ],
      "complexity": [
        "error",
        20
      ],
      "prefer-arrow-callback": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "func-style": [
        "error",
        "expression"
      ],
      "no-console": "off",
      "no-negated-condition": "off",
      "eslint-comments/no-use": "off",
      "eslint-comments/no-unlimited-disable": "off",
      "eslint-comments/no-duplicate-disable": "off",
      "import/order": "error",
      "import/no-default-export": "off",
      "import/no-cycle": "off",
      "import/no-namespace": "off",
      "github/no-then": "off",
      "i18n-text/no-en": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/restrict-template-expressions": [
        "error",
        {
          "allowNumber": true
        }
      ],
      "@typescript-eslint/no-shadow": "off",
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "fixStyle": "separate-type-imports"
        }
      ]
    }
  }
}
